        	<Run FontSize="45.5" Text="Abhishek Paudel"/>
        	<LineBreak/>
        	<Run FontSize="27.5" Text="IOE, Pulchowk Campus"/>
        	<LineBreak/>
        	<Run FontSize="27.5" Text="myheartswift@gmail.com"/>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="140" Margin="499,340,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="365">
        	<Run FontSize="45.5" Text="Nabin Bhattarai"/>
        	<LineBreak/>
        	<Run FontSize="27.5" Text="IOE, Pulchowk Campus"/>
